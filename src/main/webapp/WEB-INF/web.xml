<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Note Controller -->
    <servlet>
        <servlet-name>NoteController</servlet-name>
        <servlet-class>memo.controllers.NoteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NoteController</servlet-name>
        <url-pattern>/notes/*</url-pattern>
    </servlet-mapping>

    <!-- Category Controller -->
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>memo.controllers.CategoryController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/categories/*</url-pattern>
    </servlet-mapping>

    <!-- Auth Controller -->
    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>memo.controllers.AuthController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/auth/*</url-pattern>
    </servlet-mapping>

</web-app>
